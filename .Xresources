Xcursor.theme: whiteglass
Xcursor.size: 14

! Use gcolor for an eyedropper.
xterm*background: #1C1C1C
xterm*foreground: #ffffff

! URxvt*.transparent: true
! URxvt*.shading: 60
URxvt*background: #1C1C1C
URxvt*foreground: #ffffff
!URxvt.font: xft:inconsolata:pixelsize=15
#ifdef derecho
URxvt.font: xft:Bitstream Vera Sans Mono:pixelsize=12:antialias=true:hinting=tru
#else
URxvt.font: xft:Bitstream Vera Sans Mono:pixelsize=10:antialias=true:hinting=tru
#endif
URxvt.scrollstyle: plain
URxvt.perl-ext-common: default,matcher,font-size
URxvt.url-launcher: /usr/bin/chromium
URxvt.matcher.button: 1
URxvt*iso14755: False
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
